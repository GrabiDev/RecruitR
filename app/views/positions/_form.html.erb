<%= form_with model: @position, local: true do |form| %>
    
    <% if @position.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@position.errors.count, "error") %> prohibited
        this position from being added:
      </h2>
      <ul>
        <% @position.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </p>

    <p>
      <%= form.label :description %><br>
      <%= form.text_area :description %>
    </p>
    
    <p>
      <%= form.label :skills %><br>
      <%= form.text_field :all_skills, placeholder: "Skills separated with comma" %>
   
    <p>
      <%= form.submit "Post", class: "button"%>
    </p>

<% end %>