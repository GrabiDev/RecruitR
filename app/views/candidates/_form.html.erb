<% # form for adding and editing candidates %>
<%= form_with model: @candidate, local: true do |form| %>
    <% # show errors if present %>
    <% if @candidate.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@candidate.errors.count, "error") %> prohibited
        this candidate from being added:
      </h2>
      <ul>
        <% @candidate.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% # form fields %>
    <p>
      <%= form.label :first_name %><br>
      <%= form.text_field :first_name %>
    </p>

    <p>
      <%= form.label :last_name %><br>
      <%= form.text_field :last_name %>
    </p>

    <p>
      <%= form.label :email %><br>
      <%= form.text_field :email %>
    </p>

    <p>
      <%= form.label :skills %><br>
      <%= form.text_field :all_skills, placeholder: "Skills separated with comma" %>
    </p>
    
    <% # if position passed as a parameter, select it %>
    <p>
      <%= form.label :position %><br>
      <%= form.collection_select :position_id, Position.all, :id, :title, { selected: local_assigns[:selected_position_id] } %>
    <p>
      <%= form.submit %>
    </p>

<% end %>