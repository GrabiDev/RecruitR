<% # shared form for adding and editing skills %>
<%= form_with model: @skill, local: true do |form| %>
    
    <% if @skill.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@skill.errors.count, "error") %> prohibited
        this skill from being added:
      </h2>
      <ul>
        <% @skill.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <p>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </p>
   
