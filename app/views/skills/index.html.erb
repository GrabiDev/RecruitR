<h2>Listing skills</h2>
<%= link_to 'Add skill', new_skill_path %>
<% if @skills.count > 0 %>
<table>
    <tr>
        <th>Skill name</th>
    </tr>

    <% @skills.each do |skill| %>
        <tr>
            <td><%= skill.name %></td>
            <td><%= link_to 'Edit', edit_skill_path(skill) %></td>
            <td><%= link_to 'Delete', skill_path(skill),
            method: :delete,
            data: { confirm: 'Are you sure you want to delete ' + skill.name + '?' } %></td>
        </tr>
    <% end %>
</table>
<% else %>
<h3>No skills to show.</h3>
<% end %>